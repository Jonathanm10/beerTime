<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xavier.baudevin.beertime.Detail"
    tools:showIn="@layout/activity_detail"
    android:background="#f0f0f0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nom"
                    android:id="@+id/labelName" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/inputName"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Type"
                    android:id="@+id/labelType" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/inputType"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="80dp"
                android:layout_width="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginBottom="15dp"
                android:layout_gravity="start"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Contenance"
                    android:id="@+id/labelMl" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:gravity="start">

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:minEms="0"
                        android:maxEms="10000"
                        android:id="@+id/inputMl"
                        android:singleLine="true"
                        android:inputType="numberDecimal" />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:paddingTop="13dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="ml"
                        android:id="@+id/unitMl"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="80dp"
                android:layout_width="wrap_content"
                android:minWidth="120dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="DegrÃ©"
                    android:id="@+id/labelDegre"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:minEms="1"
                        android:maxEms="100"
                        android:gravity="right"
                        android:id="@+id/inputDegre"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:paddingTop="13dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="%"
                        android:id="@+id/unitDegre"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="80dp"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginBottom="15dp"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Note"
                    android:gravity="right"
                    android:id="@+id/labelRate" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="right">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/inputRate"
                        android:singleLine="true"
                        android:maxEms="10"
                        android:minEms="0"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="13dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="/10"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:id="@+id/unitRate"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:text="Comment"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputComment"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="3"/>

        </GridLayout>

    </ScrollView>

</RelativeLayout>
